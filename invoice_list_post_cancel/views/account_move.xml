<odoo>
  <data>
    <record id="account_move_tree_view_inherit_button" model="ir.ui.view">
    <field name="name">account.move.tree.inherit.buttons</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_invoice_tree" />
    <field name="arch" type="xml">
      <field name="state" position="after">
        <button string="Post"
                name="action_post"
                type="object"
                class="btn btn-primary"
                states="draft" />
        <button string="Register Payment"
                name="action_invoice_register_payment"
                type="object"
                class="btn btn-primary"
                attrs="{'invisible':['|',('invoice_payment_state','not in',['not_paid','partial']),('state','!=','posted')]}"/>
        <button string="Reset to Draft"
                name="button_draft"
                type="object"
                class="btn btn-primary"
                states="posted,cancel"/>
        <button string="Cancel"
                name="button_cancel"
                type="object"
                states="draft" 
                class="btn btn-primary"/>
        
      </field>
    </field>
  </record>
  </data>
</odoo>